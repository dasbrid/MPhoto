<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
>
    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View all photos in selected month"
            android:textSize="@dimen/tabs_text_size"
            android:layout_marginBottom="@dimen/tabs_text_margin_bottom"
            android:gravity="center_horizontal"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:gravity="center_horizontal"
    >

    <asbridge.me.uk.MPhoto.controls.MonthControl
            android:id="@+id/monthControlMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textView"/>
    <asbridge.me.uk.MPhoto.controls.NumberControl
            android:id="@+id/yearControlMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/monthControlMonth"
            android:layout_marginLeft="20dp"
    />
    </LinearLayout>

</RelativeLayout>